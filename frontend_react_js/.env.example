# Public frontend environment variables (Create React App prefix REACT_APP_)
# Set REACT_APP_API_BASE to the backend base URL. For local dev this is usually http://localhost:3001
REACT_APP_API_BASE=http://localhost:3001

# Health endpoint path relative to API base (backend currently exposes GET / returning {"message": "Healthy"})
REACT_APP_HEALTHCHECK_PATH=/

# Feature flags as JSON. Example enables charts.
REACT_APP_FEATURE_FLAGS={"charts": true}

# Optional environment variables reserved for deployment orchestration; not used directly by current code:
REACT_APP_BACKEND_URL=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=

REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true

# If running frontend on a non-default port
REACT_APP_PORT=3000

REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/  # duplicate allowed; prefer the earlier one
REACT_APP_FEATURE_FLAGS={"charts": true}
REACT_APP_EXPERIMENTS_ENABLED=false
